{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["HOSTNAME"],
  "tasks": {
    "bundle": {
      "outputs": ["dist/**"],
      "dependsOn": ["^bundle"]
    },
    "test": {},
    "test:watch": {},
    "type-check": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
